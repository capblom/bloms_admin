datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  username       String   @unique
  password       String
  permissionLevel Int     @default(0)
}
